export(starting.point.musse)
export(starting.point.musse.multitrait)
export(starting.point.quasse)

## 5. MCMC:
export(mcmc)

S3method(mcmc, default)
S3method(mcmc, dtlik)

export(sampler.slice)
export(sampler.norm)

export(constrain)
export(constrain.i)

